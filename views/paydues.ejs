<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>I-PAWN | Product Info</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style type="text/css">
        .navbar {
            margin-top: 20px;
        }
    </style>
    <style>
        body {
            padding-top: 20px;
            padding-bottom: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="jumbotron">
            <h1 style="text-align:center">Pay your Dues !</h1>
        </div>
        <nav class="navbar navbar-inverse">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/check/mainpage" class="navbar-brand">I-PAWN</a>
            </div>
            <!-- Collection of nav links, forms, and other content for toggling -->
            <div id="navbarCollapse" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/check/mainpage">Home</a></li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">Profile<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="/check/viewprofile">View Profile</a></li>
                            <li class="divider"></li>
                            <li><a href="/check/editprofile">Edit Profile</a></li>
                        </ul>
                    </li>
                    <li><a href="/check/productinfo">Product</a></li>
                    <li><a href="/check/mainpage">Back</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/check/logout">LogOut</a></li>
                </ul>
            </div>
        </nav>
        <div class="row">
            <div class="col-lg-12">
                <div class="list-group">
                    <!-- loop over blog posts and render them -->

                    <% rows.forEach((post) => { %>

                        <h4 class="list-group-item-text">
                            <span><strong>Customer-Name :  </strong><%= post.cust_name %></span>
                        </h4>
                        <br>
                        <br>
                        <p class="list-group-item-text">
                            <span><strong>Product-Name :  </strong><%= post.product_name %></span>
                        </p>
                        <br>
                        <br>
                        <p class="list-group-item-text">
                            <span><strong>Product-Type :  </strong> <%= post.product_type %></span>
                        </p>
                        <br>
                        <br>
                        <p class="list-group-item-text">
                            <span><strong>Total-amount :  </strong> <%= post.total_amount %></span>
                        </p>
                        <br>
                        <br>
                        <p class="list-group-item-text">
                            <span><strong>Amount-Remaining :  </strong> <%= post.amount_remaining %></span>
                        </p>
                        <br>
                        <br>
                        <p class="list-group-item-text">
                            <span><strong>Amount-Paid :  </strong> <%= post.amount_paid %></span>
                        </p>
                        <br>
                        <br>
                        <form action="/api/duepayment/<%= post.product_id %>" method="post">
                            <input type="text" name="paid" placeholder="Enter amount">
                            <br><br>
                            <button type="submit" name="submit">Pay Due</button>
                            <br> <br>
                        </form>
                        <hr style="height:1px;border:none;color:#333;background-color:#333;" />
                        <% }) %>
                </div>
            </div>
        </div>
    </div>
</body>

</html>